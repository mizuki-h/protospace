= form_for current_user, html: {class: 'container proto-new'}  do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: 'Title',class: 'proto-new-title'
    .row
      .col-md-12
        .cover-image-upload
          = f.fields_for @main_image do |proto_main_image|
            = proto_main_image.file_field :content
            = proto_main_image.hidden_field :status, value: 'main_image'
      .col-md-12
        %ul.proto-sub-list.list-group
          = f.fields_for @main_image do |proto_sub_image|
            %li.list-group-item.col-md-4
              .image-upload
                = proto_sub_image.file_field :content
                = proto_sub_image.hidden_field :status, value: 'sub_images'
            %li.list-group-item.col-md-4
              .image-upload
                = proto_sub_image.file_field :content
                = proto_sub_image.hidden_field :status, value: 'sub_images'
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catchcopy, placeholder: 'Catch Copy'
      .col-md-12
        = f.text_area :concept, cols: '30', rows: '4', placeholder: 'Concept'
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            %input{type: "text", placeholder: "Web Design"}/
          .col-md-3
            %input{type: "text", placeholder: "UI"}/
          .col-md-3
            %input{type: "text", placeholder: "Application"}/
    .row.text-center.proto-btn
      =button_tag "Publish",type: "submit",class: "btn btn-lg btn-primary btn-block"

