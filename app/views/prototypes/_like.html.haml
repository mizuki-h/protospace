- if user_signed_in?
  - if prototype.like_user(current_user)
    = button_to prototype_like_path(like, prototype_id: prototype.id), method: :delete, class: "btn btn-default", id: "like-button", remote: true do
      = image_tag("icon_heart_red.svg")
      Like
      %span.num= prototype.count
  - else
    = button_to prototype_likes_path(prototype), class: "btn btn-default", id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      Like
      %span.num= prototype.count
-else
  = image_tag("icon_heart.svg")
  Like
  %span.num= prototype.count
