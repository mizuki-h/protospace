.col-sm-4.col-md-3.proto-content
  -if user_signed_in? && prototype.user.id == current_user.id
    .dropdown.drop_menu_location
      %a.btn.btn-default.dropdown-toggle#dropdownMenu{aria: { expanded: "false" }, data: { toggle: "dropdown" }, href: "#", role: "button"}
        Action
      %ul.dropdown-menu{role: "menu",aria: { labelledby: "dropdownMenu1"}}
        %li
          = link_to "Delete", prototype_path(prototype), method: :delete
        %li
          = link_to "Edit", edit_prototype_path(prototype)
  .thumbnail
    = link_to prototype_path(prototype) do
      = image_tag (prototype.prototype_images.first.content)
    .caption
      %h3
        = prototype.title
        .proto-meta
          .proto-user
            =link_to "by#{prototype.user.name}", user_path(current_user)
          .proto-posted
            = prototype.created_at.strftime("%b %d")
      %ul.proto-tag-list.list-inline
        -prototype.tags.each do |tag|
          %li
            =link_to tag.name, tag_path(tag), class: "btn btn-default"

